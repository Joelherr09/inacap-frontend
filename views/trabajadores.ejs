<%- include('templates/cabecera', {tituloweb: 'Inicio EJS'}); %>

<%- include('templates/navbar') %>


<div class="conteiner bg-light bg-opacity-25 m-5 shadow-lg p-3 mb-5 bg-body rounded">
    <div class="row">
        <div class="col m-5" style="display: flex;justify-content: space-between; font-size: larger;">
            <div class="lista-empleados-container">
                <h2>Lista de Usuarios</h2>

                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Profesión</th>
                        <th scope="col">Acción</th>
                      </tr>
                    </thead>
                    <tbody>

                        <% if (arrayUsuarios.length >0) { %>
                            <% arrayUsuarios.forEach(usuario => { %>
                                <tr>
                                    <th scope="row"><%= usuario.id %></th>
                                    <td><%= usuario.nombre %></td>
                                    <td><%= usuario.descripcion %></td>
                                    <td>@mdo</td>
                                  </tr>
                            <% }) %>
                        <% } %>


                    </tbody>
                  </table>





            </div>
        </div>
    </div>
</div>








